<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    <url>
        <loc>{{ url('index') }}</loc>
    </url>
    <url>
        <loc>{{ url('about') }}</loc>
    </url>
    <url>
        <loc>{{ url('offers') }}</loc>
    </url>
    {% for category in items %}
        <url>
            <loc>{{ url('offer', {'slug': category.slug}) }}</loc>
        </url>
    {% endfor %}
    <url>
        <loc>{{ url('contact') }}</loc>
    </url>
</urlset>
